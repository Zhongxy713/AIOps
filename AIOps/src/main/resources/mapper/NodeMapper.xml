<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxy.aiops.mapper.NodeMapper">
    <resultMap id="pageNode" type="com.zxy.aiops.entity.Node">
        <id column="id" property="id" />
        <result column="name" property="nodeName" />
        <collection property="nodeData"  ofType="com.zxy.aiops.entity.NodeData" select="getNodeData" column="name">
        </collection>

    </resultMap>

    <select id="getNodeData" resultType="com.zxy.aiops.entity.NodeData">
        SELECT * FROM nodedata WHERE node_name like concat('%', #{name} ,'%')
    </select>

    <select id="findPage" resultMap="pageNode">
        select *

        from node
    </select>
</mapper>
